<h1 class="text-3xl font-bold mb-4 text-center text-teal-600">Publicações</h1>

<% @articles.each do |article| %>
  <div class="bg-white p-4 mb-6 rounded-lg shadow-lg">
    <h2 class="text-xl font-semibold text-teal-700">
      <%= link_to article.title, article, class: 'hover:text-teal-500' %>
    </h2>
    <p class="text-gray-600 mt-2"><%= truncate(article.body, length: 100) %></p>
    <small class="text-gray-500">Publicado por: <%= article.user.email %> | <%= time_ago_in_words(article.created_at) %> atrás</small>
  </div>
<% end %>

<% if logged_in? %>
  <div class="text-center">
    <%= link_to 'Nova Publicação', new_article_path, class: 'text-white bg-teal-500 px-4 py-2 rounded-md hover:bg-teal-600' %>
  </div>
<% end %>
