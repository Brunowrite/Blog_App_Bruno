<h1 class="text-3xl font-bold mb-6 text-teal-600">Nova Publicação</h1>

<%= form_with model: @article, local: true do |form| %>
  <div class="bg-white p-6 rounded-lg shadow-md">
    <div class="mb-4">
      <%= form.label :title, "Título", class: "block text-teal-700 font-semibold" %>
      <%= form.text_field :title, class: 'mt-2 p-2 w-full border border-teal-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500' %>
    </div>

    <div class="mb-6">
      <%= form.label :body, "Conteúdo", class: "block text-teal-700 font-semibold" %>
      <%= form.text_area :body, class: 'mt-2 p-2 w-full border border-teal-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500', rows: 6 %>
    </div>

    <%= form.submit "Publicar", class: "bg-teal-500 text-white px-4 py-2 rounded-md hover:bg-teal-600" %>
  </div>
<% end %>

<%= link_to "Voltar", articles_path, class: "text-teal-500 mt-4 hover:text-teal-700" %>
