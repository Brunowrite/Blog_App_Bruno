<h1 class="text-4xl font-bold text-center text-teal-600 mb-8">Login</h1>

<div class="max-w-sm mx-auto bg-white p-8 rounded-lg shadow-lg">
  <%= form_with url: login_path, local: true do |form| %>
    <div class="form-group mb-4">
      <%= form.label :email, "Email", class: "text-sm font-medium text-gray-700" %>
      <%= form.email_field :email, class: "w-full px-4 py-2 mt-1 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-teal-500" %>
    </div>

    <div class="form-group mb-6">
      <%= form.label :password, "Senha", class: "text-sm font-medium text-gray-700" %>
      <%= form.password_field :password, class: "w-full px-4 py-2 mt-1 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-teal-500" %>
      <small class="text-sm text-gray-500">A senha deve ter **pelo menos 6 caracteres**.</small>
    </div>

    <div class="mb-4">
      <%= form.submit "Entrar", class: "w-full py-2 px-4 bg-teal-500 text-white font-semibold rounded-lg hover:bg-teal-600 focus:outline-none focus:ring-2 focus:ring-teal-400" %>
    </div>
  <% end %>

  <div class="text-center">
    <%= link_to "NÃ£o possui uma conta? Cadastre-se", new_user_path, class: "text-teal-500 hover:text-teal-600" %>
  </div>
</div>
